<h1>Регистрация</h1>

<div class="row">
  <div class="">
    <%= form_for(@user) do |f| %>
      <%= f.label "Логин: " %><br>
      <%= f.text_field :log %><br>

      <%= f.label :password, "Пароль: " %><br>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, "Подтвердите пароль: " %><br>
      <%= f.password_field :password_confirmation %><br>

      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

